@page
@model EComm_Project.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderStatus)
            
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
@if (Model.Order.ProductOrders.Any())
{
    <table class="table">
        @*<thead>*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Order.ProductOrders[0].Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.ProductOrders[0].Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.ProductOrders[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.ProductOrders[0].OrderPrice)
                </th>
                <th></th>
            </tr>
        @*</thead>*@
        <tbody>
            @foreach (var item in Model.Order.ProductOrders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderPrice)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ProductOrderId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ProductOrderId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ProductOrderId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning"> No Products Added </div>
}
<div>
   
    <a asp-page="./Index">Back to List</a>
</div>

