@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .row {
        padding-left: 15px;
        padding-top: 15px;
        padding-right: 15px;
        padding-bottom: 15px;
    }

    .Login-Btn {
        justify-content: right;
        text-align: right;
    }
    .btn-primary {
        justify-content: center;
        text-align: center;
        padding-left: 15px;
        padding-top: 15px;
        padding-right: 15px;
        padding-bottom: 15px;
    }
</style>


@if (TempData["notice"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> @TempData["notice"]
    </div>
}

else
{
    <div class="Login-Btn">
        <form method="post">
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" asp-page-handler="Login" />
            </div>
        </form>
    </div>
}


<div class="text-center">
    <h1 class="display-4" style="color:mediumpurple;">Posh Pauper's Products</h1>
    <p><a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">Click here to learn about Posh Pauper's History</a></p>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://cdn.mos.cms.futurecdn.net/9Z2u52sM4Y2zRaheE79PLJ-1200-80.jpg" alt="First slide" height="540">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="color:darkblue;"><b>Sale of the Year is here!!</b></h2>
                @*<p style="color:darkblue;">The time is here to make use of the amazing offers available at Posh Paupers to upgrade your wardrobe and make that fashion statement that you always wanted to!</p>*@
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://www.nytimes.com/vi-assets/static-assets/NYT-BestSeller-1200x675-699eb842421d5076f318fe0df3d903a5.png" alt="Second slide" height="540">
            <div class="carousel-caption d-none d-md-block" padding-top: 20px;>
                <p style="color:white;">We received the prestigious award for our services and commitment to our customers.</p>

            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dv2oc5tyj18yr.cloudfront.net/wp-content/blogs.dir/2/files/2017/01/Black-History-Month-2017-Image.jpg" alt="Third slide" height="540">
            <div class="carousel-caption d-none d-md-block">
                <h2>Black History is Today</h2>
                <p> We are celebrating our diversity today and stand together!</p>

            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    <form method="post">
